{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "examples": [
      {
          "id": 1,
          "title": "title",
          "description": "Description of post",
          "body": "text body of post",
          "votes": 1,
          "user_id": 1
      }
  ],
  "required": [
      "title",
      "description",
      "body"
  ],
  "properties": {
      "id": {
          "$id": "#/properties/id",
          "type": "integer",
          "title": "The id schema",
          "description": "An explanation about the purpose of this instance.",
          "default": 0,
          "examples": [
              1
          ]
      },
      "title": {
          "$id": "#/properties/title",
          "type": "string",
          "title": "The title schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "title"
          ]
      },
      "description": {
          "$id": "#/properties/description",
          "type": "string",
          "title": "The description schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "Description of post"
          ]
      },
      "body": {
          "$id": "#/properties/body",
          "type": "string",
          "title": "The body schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "text body of post"
          ]
      },
      "votes": {
          "$id": "#/properties/votes",
          "type": "integer",
          "title": "The votes schema",
          "description": "An explanation about the purpose of this instance.",
          "default": 0,
          "examples": [
              1
          ]
      },
      "user_id": {
          "$id": "#/properties/user_id",
          "type": "integer",
          "title": "The user_id schema",
          "description": "An explanation about the purpose of this instance.",
          "default": 0,
          "examples": [
              1
          ]
      }
  },
  "additionalProperties": true
}